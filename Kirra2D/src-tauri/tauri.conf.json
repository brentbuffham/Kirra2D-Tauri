{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kirra 2D",
  "version": "1.0.0",
  "identifier": "com.kirra2d.app",
  "build": {
    "frontendDist": "../src",
    "beforeBuildCommand": "",
    "beforeDevCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Kirra 2D",
        "width": 1100,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "capabilities": [
        "core-access",
        "fs-access",
        "web-access"
      ],
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' https://blastingapps.com; style-src 'self' 'unsafe-inline' https://blastingapps.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon_32x32.png",
      "icons/icon_32x32@2x.png",
      "icons/icon_128x128.png",
      "icons/icon_128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
